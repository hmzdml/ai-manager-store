# ===========================================
# AI-POWERED SHOPIFY STORE MANAGER
# Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values

# =============== Database ===============
DATABASE_URL="postgresql://user:password@localhost:5432/ai_store_manager?schema=public"

# =============== Application ===============
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:5173"

# JWT Secret for authentication (generate a random string)
JWT_SECRET="your-super-secret-jwt-key-change-this"

# =============== Shopify API ===============
# Get these from: Shopify Admin > Settings > Apps and sales channels > Develop apps
SHOPIFY_SHOP_URL="your-store.myshopify.com"
SHOPIFY_ACCESS_TOKEN="shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SHOPIFY_API_VERSION="2024-01"

# =============== OpenAI / AI Provider ===============
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS_PER_DAY=100000

# =============== Google Merchant Center ===============
# Setup: https://developers.google.com/shopping-content/guides/quickstart
GOOGLE_MERCHANT_CENTER_ID="123456789"
GOOGLE_APPLICATION_CREDENTIALS="./credentials/google-service-account.json"

# =============== Google Ads ===============
# Setup: https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_DEVELOPER_TOKEN="your-developer-token"
GOOGLE_ADS_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your-client-secret"
GOOGLE_ADS_REFRESH_TOKEN="your-refresh-token"
GOOGLE_ADS_CUSTOMER_ID="1234567890"

# =============== Meta (Facebook/Instagram) Ads ===============
# Setup: https://developers.facebook.com/
META_APP_ID="your-app-id"
META_APP_SECRET="your-app-secret"
META_ACCESS_TOKEN="your-long-lived-access-token"
META_AD_ACCOUNT_ID="act_1234567890"

# =============== TikTok Ads ===============
# Setup: https://business-api.tiktok.com/
TIKTOK_ACCESS_TOKEN="your-tiktok-access-token"
TIKTOK_ADVERTISER_ID="your-advertiser-id"

# =============== Microsoft (Bing) Ads ===============
# Setup: https://docs.microsoft.com/en-us/advertising/guides/
MICROSOFT_ADS_DEVELOPER_TOKEN="your-microsoft-developer-token"
MICROSOFT_ADS_CLIENT_ID="your-client-id"
MICROSOFT_ADS_CLIENT_SECRET="your-client-secret"
MICROSOFT_ADS_REFRESH_TOKEN="your-refresh-token"
MICROSOFT_ADS_CUSTOMER_ID="your-customer-id"

# =============== Social Media Platforms ===============
# Instagram (via Meta Graph API - same as Meta above)
INSTAGRAM_BUSINESS_ACCOUNT_ID="your-instagram-business-id"

# Facebook Page
FACEBOOK_PAGE_ID="your-facebook-page-id"

# TikTok Business
TIKTOK_BUSINESS_ID="your-tiktok-business-id"

# =============== Redis (for job queue) ===============
REDIS_URL="redis://localhost:6379"

# =============== Image Generation (Optional) ===============
# For AI-generated product images/social media posts
STABILITY_AI_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
DALLE_ENABLED="true"

# =============== Automation Settings ===============
# Master switch - set to "false" to pause all automations
AUTOMATION_ENABLED="true"

# Job frequencies (in cron format)
SYNC_PRODUCTS_CRON="0 */6 * * *"  # Every 6 hours
CATEGORIZE_PRODUCTS_CRON="0 2 * * *"  # Daily at 2 AM
IMPROVE_CONTENT_CRON="0 3 * * *"  # Daily at 3 AM
SYNC_GMC_CRON="0 */4 * * *"  # Every 4 hours
AUDIT_SEO_CRON="0 4 * * 0"  # Weekly on Sunday at 4 AM
POST_SOCIAL_MEDIA_CRON="0 9,15 * * *"  # Twice daily at 9 AM and 3 PM

# Batch sizes for AI processing
AI_BATCH_SIZE=30
MAX_PRODUCTS_PER_BATCH=50

# Budget limits (USD per day)
GOOGLE_ADS_DAILY_BUDGET=50
META_ADS_DAILY_BUDGET=50
TIKTOK_ADS_DAILY_BUDGET=30
MICROSOFT_ADS_DAILY_BUDGET=20
